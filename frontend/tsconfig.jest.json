{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "module": "esnext",
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "lib": ["DOM", "ESNext"],
    // added:
    "allowJs": true,
    // added to help TypeScript treat every file as an isolated unit:
    "isolatedModules": true,
    // added:
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx"
  ]
}
